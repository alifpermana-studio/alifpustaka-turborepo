generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  fname              String?
  lname              String?
  username           String    @unique
  email              String?   @unique
  emailVerified      DateTime?
  password           String?
  passwordResetToken String?   @unique
  resetTokenExpiry   Int?

  userRole        UserRole            @default(USER)
  roleReq         UserRoleChangeReq[] @relation("UserRoleReq")
  actionedRoleReq UserRoleChangeReq[] @relation("UserRoleReqAction")

  userStatus        UserStatus            @default(ACTIVE)
  statusReq         UserStatusChangeReq[] @relation("UserStatusReq")
  actionedStatusReq UserStatusChangeReq[] @relation("UserStatusReqAction")

  image         String?
  social        Json?
  address       Json?
  phone         String?
  bio           String?
  notifications Notification[]
  galleries     Gallery[]      @relation("UserGalleries")
  posts         Post[]         @relation("UserPosts")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
}

model UserRoleChangeReq {
  id          String   @id @default(uuid())
  reqBy       User     @relation("UserRoleReq", fields: [reqById], references: [id], onDelete: Cascade, onUpdate: Cascade)
  reqById     String
  reqUserRole UserRole @default(USER)
  status      Status   @default(PENDING)
  reqMsg      String?
  resMsg      String?
  resBy       User?    @relation("UserRoleReqAction", fields: [resById], references: [id], onDelete: Cascade, onUpdate: Cascade)
  resById     String?
  resUserRole UserRole @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserStatusChangeReq {
  id            String     @id @default(uuid())
  reqBy         User       @relation("UserStatusReq", fields: [reqById], references: [id], onDelete: Cascade, onUpdate: Cascade)
  reqById       String
  reqUserStatus UserStatus @default(ACTIVE)
  status        Status     @default(PENDING)
  reqMsg        String?
  resBy         User?      @relation("UserStatusReqAction", fields: [resById], references: [id], onDelete: Cascade, onUpdate: Cascade)
  resById       String?
  resMsg        String?
  resUserStatus UserStatus @default(ACTIVE)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

enum UserRole {
  USER
  WRITER
  EDITOR
  ADMIN
  SUPERADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  DELETED
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  metadata  Json? // Optional for storing extras
}

model Gallery {
  id         String       @id @default(cuid())
  title      String
  path       String
  slug       String       @unique
  size       Int
  userId     String
  type       String
  uploadTime DateTime     @default(now())
  isPrivate  Boolean      @default(true) // Track if image is private
  isFeatured Boolean      @default(false) // Track if image is featured
  ownerUser  User         @relation("UserGalleries", fields: [userId], references: [id])
  tags       GalleryTag[]
}

model Post {
  id         String    @id @default(cuid())
  title      String
  slug       String    @unique
  image      String
  status     String
  footnote   String
  desc       String
  content    String
  userId     String
  uploadTime DateTime  @default(now())
  ownerUser  User      @relation("UserPosts", fields: [userId], references: [id])
  tags       PostTag[]
}

model Tag {
  id        String       @id @default(cuid())
  name      String       @unique
  galleries GalleryTag[]
  posts     PostTag[]
}

model GalleryTag {
  galleryId String
  tagId     String

  gallery Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([galleryId, tagId])
}

model PostTag {
  postId String
  tagId  String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}
